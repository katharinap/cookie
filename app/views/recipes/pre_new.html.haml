- model_class = Recipe
.page-header
  %h1=t '.title', :default => [:'helpers.titles.new', 'New %{model}'], :model => model_class.model_name.human.titleize

  = form_tag new_recipe_path, html: { class: 'form-horizontal' }, method: :get do |f|
    = text_field_tag 'name'

    %h2 Ingredients
    = text_area_tag 'ingredients', nil, class: 'form-control', rows: 20

    %h2 Directions
    = text_area_tag 'directions', nil, class: 'form-control', rows: 20

    %br
    = submit_tag 'Submit'


